    <%= select_tag(:selected_target_id, options_for_select(@targets.map {|u| [u.name, u.id]})) %>
  </div>
  <%= link_to "Сформировать",  {report_id: "report_progress_project_pril_1_2"},  class: 'pass-params-from-select button'%>
